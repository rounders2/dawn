{% unless template == 'index' or template == 'cart' or template == 'list-collections' %}
  <div class="breadcrumb-container">
    <nav class="breadcrumb page-width" role="navigation" aria-label="breadcrumbs">
    {% assign foundit = false %}
    {% for link in linklists.main-menu.links %}

     {% assign link_title_parts = link.title | split: '-' %}
          {% if link.links != blank %}

          {% unless link.title == 'Brands' %}

           {% assign link-handle = link.url | remove: "/collections/" %}
            {% if link-handle == collection.handle  %}
              {{ link.title | replace: '-', ' ' | link_to: link.url }} {{ link.title | replace: '-', ' ' | remove: '-' | prepend: "All " | link_to: link.url}}
            {% endif %}

              {% for child_link in link.links %}
                {% assign child-link-handle = child_link.url | remove: "/collections/" %}
                {% if child-link-handle == collection.handle and foundit == false  %}
                  <a href= "{{ link.url }}">{{ link_title_parts[0] }} {{ link_title_parts[1] }}</a>  <a href= "{{ child_link.url }}">{{ child_link.title }}</a>
                  {% assign foundit = true %}
                {% else %}

                {% endif %}

                {% if child_link.links != blank %}
                  {% for grandchild_link in child_link.links %}
                  {% assign grandchild-link-handle = grandchild_link.url | remove: "/collections/" %}

                    {% if grandchild-link-handle == collection.handle and foundit == false %}
                     <a href= "{{ link.url }}">{{ link_title_parts[0] }} {{ link_title_parts[1] }}</a> <a href= "{{ child_link.url }}">{{ child_link.title }}</a> {{ grandchild_link.title }}
                     {% assign foundit = true %}
                    {% endif %}
                  {% endfor %}
                {% endif %}
              {% endfor %}
           {% endunless %}
          {% endif %}
    {% endfor %}


    </nav>
  </div>
{% endunless %}


<style>
.breadcrumb-container {
  background: #f5f5f5;
  padding:1rem;
  font-size: 1.2rem;
  text-transform:uppercase;
}

.breadcrumb-container .breadcrumb a:first-child {
  padding-right: 20px;
  border-right: 1px solid #233633;
}
.breadcrumb-container .breadcrumb a:nth-child(2) {
  padding-left: 20px;
  padding-right: 10px;
  }
.breadcrumb-container .breadcrumb a:nth-child(3) {
  padding-left: 20px;
  border-left: 1px solid #233633;
}
</style>
